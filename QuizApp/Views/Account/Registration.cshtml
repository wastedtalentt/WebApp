                                <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="2" class="active"
                                        aria-label="Slide 3"></button>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <img src="../images/home/clothe1.jpeg" alt="closes" class="img-fluid rounded">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-back container" id="text-mob">
        <br>
        <br>
