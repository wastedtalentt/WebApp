</head>
<header>
        <div class="topNavBar container">
            <div id="home-icon">
                <!-- Home Link -->
                <a href="@Url.Action("SecurePage", "Account")" id="Known-logo">Known</a>
            </div>
            <div id="logout-icon">
                <!-- Profile Link with Icon -->
                <a href="@Url.Action("Profile", "Account")">
                    <i id="logout-i" class="fas fa-user"></i>
                </a>
            </div>
        </div>
    <hr />
            <nav class="navbar navbar-expand-lg container" data-bs-theme="light">
                <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div id="navbarBrand" class="d-block d-lg-block d-lg-none">
                        <!-- Profile Icon in Mobile View -->
                        <a href="@Url.Action("Profile", "Account")">
                            <i id="logout-i" class="fas fa-user"></i>
                        </a>
                    </div>

                   
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("SecurePage", "Account")">მთავარი</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Quiz", "Account")">ქვიზები</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Information", "Account")">ინფორმაცია</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
  <hr>
  </header>
<main>
    @RenderBody() <!-- The content from the page will be rendered here -->
</main>

<!-- Footer -->
<footer>
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <p>დაგვიკავშირდით</p>
                <p>Gmail</p>
                <br>
            </div>

            <div class="col-md-3">
                <p>სოციალური ქსელები</p>
                <p>Linkedin</p>
                <p>Instagram</p>
                <br>
            </div>

            <div class="col-md-3">
                <div id="top-ge-counter-container" data-site-id="117788"></div>
            </div>
        </div>
    </div>

    <div class="container">
        <hr id="footer-hr">
    </div>

    <div class="container">
        <img id="copyrightIcon" src="~/images/home/icons8-copyright-24.png" alt="Copyright Icon"> 2025
    </div>
</footer>

<!-- Scripts -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
<script src="~/js/app.js" defer></script>
